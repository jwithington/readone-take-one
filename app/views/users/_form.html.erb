<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= render 'shared/error_messages' %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
